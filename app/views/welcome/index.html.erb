<div id="splash-page">

  <div class="row">
      <div class="col-xs-6">
        <%= image_tag("logo_yellow.png", :alt => "yellow logo", height: '600', width: '599', id:'logo-yellow') %>
      </div>
        <div id="splash-info col-xs-6">
          <h2>Location: </h2>
          <h3><%= @contact.location %></h3>
          <br>
          <h2>Hours for Spring 2015</h2>
          <ul>
            <% @contact.hours_format.each do |day| %>
                <li><%=day%></li>
            <%end %>
          </ul>
          <% if @is_admin %>
              <%= button_to 'Edit Contact Info', welcome_edit_path %>
          <% end %>
        </div>
    </div>


</div>




